{
    "version": 10,
    "configurePresets": [
        {
            "name": "config-debug-clang",
            "displayName": "Debug Clang",
            "description": "Configure debug build with Clang",
            "binaryDir": "${sourceDir}/build/debug/clang",
            "generator": "Ninja",
            "cacheVariables": {
                "CMAKE_BUILD_TYPE": "Debug",
                "CMAKE_C_COMPILER": "/usr/local/bin/clang",
                "CMAKE_CXX_COMPILER": "/usr/local/bin/clang++",
                "CMAKE_EXPORT_COMPILE_COMMANDS": "ON",
                "CMAKE_TOOLCHAIN_FILE": "${sourceDir}/third/vcpkg/scripts/buildsystems/vcpkg.cmake",
                "STRICT_BUILD": "ON"
            }
        },
        {
            "name": "config-release-clang",
            "displayName": "Release Clang",
            "description": "Configure release build with Clang",
            "binaryDir": "${sourceDir}/build/release/clang",
            "generator": "Ninja",
            "cacheVariables": {
                "CMAKE_BUILD_TYPE": "Release",
                "CMAKE_C_COMPILER": "/usr/local/bin/clang",
                "CMAKE_CXX_COMPILER": "/usr/local/bin/clang++",
                "CMAKE_EXPORT_COMPILE_COMMANDS": "ON",
                "CMAKE_TOOLCHAIN_FILE": "${sourceDir}/third/vcpkg/scripts/buildsystems/vcpkg.cmake",
                "STRICT_BUILD": "ON"
            }
        },
        {
            "name": "config-debug-gcc",
            "displayName": "Debug GCC",
            "description": "Configure debug build with GCC",
            "binaryDir": "${sourceDir}/build/debug/gcc",
            "generator": "Ninja",
            "cacheVariables": {
                "CMAKE_BUILD_TYPE": "Debug",
                "CMAKE_C_COMPILER": "/usr/bin/gcc",
                "CMAKE_CXX_COMPILER": "/usr/bin/g++",
                "CMAKE_EXPORT_COMPILE_COMMANDS": "ON",
                "CMAKE_TOOLCHAIN_FILE": "${sourceDir}/third/vcpkg/scripts/buildsystems/vcpkg.cmake",
                "STRICT_BUILD": "ON"
            }
        },
        {
            "name": "config-release-gcc",
            "displayName": "Release GCC",
            "description": "Configure release build with GCC",
            "binaryDir": "${sourceDir}/build/release/gcc",
            "generator": "Ninja",
            "cacheVariables": {
                "CMAKE_BUILD_TYPE": "Release",
                "CMAKE_C_COMPILER": "/usr/bin/gcc",
                "CMAKE_CXX_COMPILER": "/usr/bin/g++",
                "CMAKE_EXPORT_COMPILE_COMMANDS": "ON",
                "CMAKE_TOOLCHAIN_FILE": "${sourceDir}/third/vcpkg/scripts/buildsystems/vcpkg.cmake",
                "STRICT_BUILD": "ON"
            }
        },
        {
            "name": "config-coverage",
            "displayName": "Coverage",
            "description": "Configure build with code coverage enabled",
            "binaryDir": "${sourceDir}/build/coverage",
            "generator": "Ninja",
            "cacheVariables": {
                "CMAKE_BUILD_TYPE": "Debug",
                "CMAKE_C_COMPILER": "/usr/local/bin/clang",
                "CMAKE_CXX_COMPILER": "/usr/local/bin/clang++",
                "CMAKE_EXPORT_COMPILE_COMMANDS": "ON",
                "CMAKE_TOOLCHAIN_FILE": "${sourceDir}/third/vcpkg/scripts/buildsystems/vcpkg.cmake",
                "STRICT_BUILD": "OFF",
                "ENABLE_COVERAGE": "ON"
            }
        }
    ],
    "buildPresets": [
        {
            "name": "build-debug-clang",
            "configurePreset": "config-debug-clang",
            "displayName": "Debug Clang",
            "description": "Build debug version with Clang"
        },
        {
            "name": "build-release-clang",
            "configurePreset": "config-release-clang",
            "displayName": "Release Clang",
            "description": "Build release version with Clang"
        },
        {
            "name": "build-debug-gcc",
            "configurePreset": "config-debug-gcc",
            "displayName": "Debug GCC",
            "description": "Build debug version with GCC"
        },
        {
            "name": "build-release-gcc",
            "configurePreset": "config-release-gcc",
            "displayName": "Release GCC",
            "description": "Build release version with GCC"
        },
        {
            "name": "build-coverage",
            "configurePreset": "config-coverage",
            "displayName": "Coverage",
            "description": "Build with code coverage enabled"
        }
    ],
    "testPresets": [
        {
            "name": "test-debug-clang",
            "configurePreset": "config-debug-clang",
            "displayName": "Test Debug Clang",
            "description": "Test debug version with Clang"
        },
        {
            "name": "test-release-clang",
            "configurePreset": "config-release-clang",
            "displayName": "Test Release Clang",
            "description": "Test release version with Clang"
        },
        {
            "name": "test-debug-gcc",
            "configurePreset": "config-debug-gcc",
            "displayName": "Test Debug GCC",
            "description": "Test debug version with GCC"
        },
        {
            "name": "test-release-gcc",
            "configurePreset": "config-release-gcc",
            "displayName": "Test Release GCC",
            "description": "Test release version with GCC"
        },
        {
            "name": "test-coverage",
            "configurePreset": "config-coverage",
            "displayName": "Test Coverage",
            "description": "Run tests with code coverage",
            "environment": {
                "LLVM_PROFILE_FILE": "${sourceDir}/build/coverage/test/%p-%m.profraw"
            }
        }
    ],
    "workflowPresets": [
        {
            "name": "debug-clang",
            "steps": [
                {
                    "type": "configure",
                    "name": "config-debug-clang"
                },
                {
                    "type": "build",
                    "name": "build-debug-clang"
                }
            ]
        },
        {
            "name": "release-clang",
            "steps": [
                {
                    "type": "configure",
                    "name": "config-release-clang"
                },
                {
                    "type": "build",
                    "name": "build-release-clang"
                }
            ]
        },
        {
            "name": "debug-gcc",
            "steps": [
                {
                    "type": "configure",
                    "name": "config-debug-gcc"
                },
                {
                    "type": "build",
                    "name": "build-debug-gcc"
                }
            ]
        },
        {
            "name": "release-gcc",
            "steps": [
                {
                    "type": "configure",
                    "name": "config-release-gcc"
                },
                {
                    "type": "build",
                    "name": "build-release-gcc"
                }
            ]
        },
        {
            "name": "coverage",
            "steps": [
                {
                    "type": "configure",
                    "name": "config-coverage"
                },
                {
                    "type": "build",
                    "name": "build-coverage"
                },
                {
                    "type": "test",
                    "name": "test-coverage"
                }
            ]
        }
    ]
}
